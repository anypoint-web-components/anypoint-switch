{
  "name": "@anypoint-web-components/anypoint-switch",
  "description": "A toggle button styled for Material Design and Anypoint platform.",
  "version": "0.1.1",
  "license": "Apache-2.0",
  "main": "anypoint-switch.js",
  "keywords": [
    "api-components",
    "anypoint-elements",
    "switch",
    "ui-components"
  ],
  "authors": [
    "Pawel Psztyc"
  ],
  "contributors": [
    "The Advanced REST client authors <arc@mulesoft.com>"
  ],
  "bugs": {
    "url": "https://github.com/anypoint-web-components/anypoint-switch/issues",
    "email": "arc@mulesoft.com"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/anypoint-web-components/anypoint-switch.git"
  },
  "dependencies": {
    "@anypoint-web-components/anypoint-control-mixins": "^1.0.2",
    "@anypoint-web-components/anypoint-form-mixins": "^1.0.1",
    "lit-element": "^2.0.1"
  },
  "devDependencies": {
    "@advanced-rest-client/arc-demo-helper": "^1.0.14",
    "@advanced-rest-client/eslint-config": "^1.1.2",
    "@advanced-rest-client/prettier-config": "^0.1.0",
    "@advanced-rest-client/testing-karma-sl": "^1.0.5",
    "@anypoint-web-components/anypoint-checkbox": "^1.0.1",
    "@anypoint-web-components/anypoint-styles": "^1.0.0-preview.2",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^7.0.0",
    "@open-wc/testing": "^2.3.3",
    "@open-wc/testing-karma": "^3.1.29",
    "@polymer/gen-typescript-declarations": "^1.6.1",
    "@polymer/iron-test-helpers": "^3.0.1",
    "deepmerge": "^4.0.0",
    "es-dev-server": "^1.16.0",
    "husky": "^1.0.0",
    "karma": "^4.3.0",
    "lint-staged": "^8.0.0",
    "sinon": "^7.4.1"
  },
  "scripts": {
    "test": "karma start --coverage",
    "update-types": "gen-typescript-declarations --deleteExisting --outDir .",
    "start": "es-dev-server --app-index demo/index.html --node-resolve --open --watch",
    "start:compatibility": "es-dev-server --app-index demo/index.html --compatibility all --node-resolve --open --watch",
    "lint:eslint": "eslint --ext .js,.html .",
    "format:eslint": "eslint --ext .js,.html . --fix",
    "lint:prettier": "prettier \"**/*.js\" --list-different || (echo '↑↑ these files are not prettier formatted ↑↑' && exit 1)",
    "format:prettier": "prettier \"**/*.js\" --write",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:legacy": "karma start --compatibility all --coverage",
    "test:legacy:watch": "karma start --compatibility all --auto-watch=true --single-run=false",
    "test:sl": "karma start karma.sl.config.js --compatibility all --coverage",
    "generate-model": "node demo/model.js"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
